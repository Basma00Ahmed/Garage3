@model Garage_3._0.Models.ViewModels.Vehicle.RegistrationViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    @if (TempData["UserMessage"] != null)
    {
        <p class="text-info text-center">@TempData["UserMessage"]</p>
    }
</div>

<h1>Registration</h1>

<h4>Member and Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MemberSocialSecurityNo" class="control-label"></label>
                <input asp-for="MemberSocialSecurityNo" class="form-control" />
                <span asp-validation-for="MemberSocialSecurityNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberFirstName" class="control-label"></label>
                <input asp-for="MemberFirstName" class="form-control" />
                <span asp-validation-for="MemberFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberLastName" class="control-label"></label>
                <input asp-for="MemberLastName" class="form-control" />
                <span asp-validation-for="MemberLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control" />
                <span asp-validation-for="RegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <input asp-for="VehicleTypeId" class="form-control" />
                <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
